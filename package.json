{
  "name": "rnfr-cli",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "release": "release-it",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "npx tsc && chmod +x ./build/cli.js",
    "package": "pkg . --targets node14-macos-x64 --output hello"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/config-conventional": "^13.2.0",
    "@release-it/conventional-changelog": "^3.3.0",
    "@types/node": "^16.10.1",
    "@types/yargs": "^17.0.3",
    "commitlint": "^13.2.0",
    "husky": "^7.0.2",
    "pkg": "^5.3.2",
    "release-it": "^14.11.6",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "yargs": "^17.2.1"
  },
  "bin": {
    "hello": "./build/cli.js"
  },
  "pkg": {
    "scripts": "build/**/*.js"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint --fix && yarn typescript"
    }
  }
}
